<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bottom_sheet"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Audio Equalizer"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_current_preset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flat"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="italic"
            android:layout_marginEnd="16dp"/>

        <ImageButton
            android:id="@+id/btn_eq_maximize"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_crop"
            android:contentDescription="Maximize Equalizer"
            app:tint="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enable Equalizer"
            android:textColor="@android:color/white"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_eq_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bass Boost"
            android:textColor="#AAAAAA"
            android:textSize="12sp"/>
            
        <SeekBar
            android:id="@+id/seek_bass_boost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bands_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Bands will be added dynamically here -->
    </LinearLayout>

</LinearLayout>
