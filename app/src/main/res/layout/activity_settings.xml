<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="@string/nav_settings"
            app:titleTextColor="?attr/colorPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.tuhoang.silentpipe.ui.system.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- APPEARANCE CARD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_appearance"
                android:textColor="?attr/colorAccent"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/materialCardViewFilledStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Theme -->
                    <LinearLayout
                        android:id="@+id/btn_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_appearance"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_theme_val"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pref_theme_default"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="16dp"/>

                        <ImageView
                             android:layout_width="24dp"
                             android:layout_height="24dp"
                             android:src="@android:drawable/ic_media_play"
                             app:tint="?attr/colorOnSurfaceVariant"
                             android:rotation="90" 
                             android:alpha="0.5"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorOutlineVariant" android:layout_marginStart="56dp"/>

                    <!-- Mini Player Style -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_slideshow"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pref_mini_player"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="16dp"/>
                        
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_bottom_player"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                    <!-- Language -->
                    <LinearLayout
                        android:id="@+id/btn_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_mapmode"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_language_val"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pref_language_en"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="16dp"/>
                            
                        <ImageView
                             android:layout_width="24dp"
                             android:layout_height="24dp"
                             android:src="@android:drawable/ic_media_play"
                             app:tint="?attr/colorOnSurfaceVariant"
                             android:rotation="90"
                             android:alpha="0.5"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorOutlineVariant" android:layout_marginStart="56dp"/>

                    <!-- Show Video -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_camera"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pref_show_video_exp"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="16dp"/>
                        
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_show_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorOutlineVariant" android:layout_marginStart="56dp"/>

                    <!-- Show Visualizer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pref_visualizer_label"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="16dp"/>
                        
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_show_visualizer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorOutlineVariant" android:layout_marginStart="56dp"/>

                    <!-- Visualizer Style -->
                    <LinearLayout
                        android:id="@+id/btn_visualizer_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_visualizer_style_val"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pref_visualizer_style"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="16dp"/>
                            
                        <ImageView
                             android:layout_width="24dp"
                             android:layout_height="24dp"
                             android:src="@android:drawable/ic_media_play"
                             app:tint="?attr/colorOnSurfaceVariant"
                             android:rotation="90"
                             android:alpha="0.5"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- AUDIO CARD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_audio"
                android:textColor="?attr/colorAccent"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/materialCardViewFilledStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Equalizer -->
                    <LinearLayout
                        android:id="@+id/btn_equalizer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_audio"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pref_audio_equalizer"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="16dp"/>
                        
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_media_play" app:tint="?attr/colorOnSurfaceVariant" android:rotation="90" android:alpha="0.5"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorOutlineVariant" android:layout_marginStart="56dp"/>

                    <!-- HQ Audio Switch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_lock_silent_mode_off"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pref_hq_audio"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="16dp"/>
                        
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_hq_audio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorOutlineVariant" android:layout_marginStart="56dp"/>

                     <!-- Skip Time -->
                    <LinearLayout
                        android:id="@+id/btn_skip_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_media_ff"
                            app:tint="?attr/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_skip_interval"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface"/>
                             <TextView
                                android:id="@+id/tv_skip_time_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10s"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                        
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_media_play" app:tint="?attr/colorOnSurfaceVariant" android:rotation="90" android:alpha="0.5"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- DATA CARD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_data_management"
                android:textColor="?attr/colorAccent"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/materialCardViewFilledStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                     <!-- Clear Cache -->
                    <LinearLayout
                        android:id="@+id/btn_clean_cache"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_data"
                            app:tint="?attr/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_clean_cache"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface"/>
                             <TextView
                                android:id="@+id/tv_cache_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_calculating"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_delete" app:tint="?attr/colorAccent"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorOutlineVariant" android:layout_marginStart="56dp"/>

                    <!-- YouTube Cookies -->
                    <LinearLayout
                        android:id="@+id/btn_youtube_cookies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_security"
                            app:tint="?attr/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_yt_cookies"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface"/>
                            <TextView
                                android:id="@+id/tv_cookies_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_not_set"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_edit" app:tint="?attr/colorOnSurfaceVariant" android:alpha="0.5"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
             <!-- PRIVACY CARD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_permissions"
                android:textColor="?attr/colorAccent"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/materialCardViewFilledStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Notification Permission -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_security"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pref_allow_notifications"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="16dp"/>
                        
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_notification_permission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorOutlineVariant" android:layout_marginStart="56dp"/>

                    <!-- Microphone Permission -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_security"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pref_allow_microphone"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="16dp"/>
                        
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_microphone_permission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ABOUT CARD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_about"
                android:textColor="?attr/colorAccent"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/materialCardViewFilledStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                     <!-- Check for Update -->
                    <LinearLayout
                        android:id="@+id/btn_check_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_popup_sync"
                            app:tint="?attr/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_check_update"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface"/>
                             <TextView
                                android:id="@+id/tv_update_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_never"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_view" app:tint="?attr/colorOnSurfaceVariant" android:rotation="270" android:alpha="0.5"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorOutlineVariant" android:layout_marginStart="56dp"/>

                     <!-- GitHub -->
                    <LinearLayout
                        android:id="@+id/btn_github"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            app:tint="?attr/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_github"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface"/>
                             <TextView
                                android:id="@+id/tv_about_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_never"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_view" app:tint="?attr/colorOnSurfaceVariant" android:rotation="270" android:alpha="0.5"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorOutlineVariant" android:layout_marginStart="56dp"/>

                    <!-- Error Logs -->
                    <LinearLayout
                        android:id="@+id/btn_error_logs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            app:tint="?attr/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_error_logs"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface"/>
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pref_error_logs_desc"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                        <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_view" app:tint="?attr/colorOnSurfaceVariant" android:rotation="270" android:alpha="0.5"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
