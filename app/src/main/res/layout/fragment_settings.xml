<com.tuhoang.silentpipe.ui.system.BounceScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_appearance"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_theme_default"
            android:drawableLeft="@android:drawable/ic_menu_view"
            android:drawableStart="@android:drawable/ic_menu_view"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_language_en"
            android:drawableLeft="@android:drawable/ic_menu_mapmode"
            android:drawableStart="@android:drawable/ic_menu_mapmode"
            android:padding="12dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_permissions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_notification_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_allow_notifications"
            android:textSize="14sp"
            android:padding="8dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_microphone_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_allow_microphone"
            android:textSize="14sp"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_data_management"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_backup" />

        <Button
            android:id="@+id/btn_restore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_restore" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_shortcuts"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_add_shortcut_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_add_shortcut_home" />

        <Button
            android:id="@+id/btn_add_qs_tile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_add_shortcut_qs" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_audio"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_equalizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_audio_equalizer" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_hq_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_hq_audio"
            android:textSize="14sp"
            android:padding="8dp" />

        <Button
            android:id="@+id/btn_skip_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip Interval: 10s"
            android:drawableLeft="@android:drawable/ic_menu_recent_history" 
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:padding="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_about"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_about_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SilentPipe v...\nAuthor: tuhoang / thtcsec"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_github" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_star_github"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textStyle="italic"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

</com.tuhoang.silentpipe.ui.system.BounceScrollView>
